{
  "manifest_version": 2,
  "name": "Ek≈üiDost",
  "version": "2.6.1",

  "description": "Improves UX by coloring visited entries on eksisozluk.com",
  
  "icons": {
    "128": "icons/eksiDost-128.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "*://eksisozluk.com/*"
  ],

  "background": {
    "page": "./background_scripts/background.html"
  },

  "page_action": {
    "default_title": "EksiDost",
    "default_icon": {
      "128": "icons/eksiDost-128.png"
    },
    "default_popup": "./popup/color-palette.html"
  }
}
