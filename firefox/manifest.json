{
  "manifest_version": 2,
  "name": "eksiDost",
  "version": "2.5.0",

  "description": "Colors visited entry links on eksisozluk.com for better user experience while browsing topic lists.",

  "icons": {
    "48": "icons/eksiDost-48.png",
    "96": "icons/eksiDost-96.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "*://eksisozluk.com/*"
  ],

  "background": {
    "page": "./background_scripts/background.html"
  },
  
  "page_action": {
    "browser_style": true,
    "default_title": "eksiDost",
    "default_icon": {
      "19": "icons/eksiDost-19.png",
      "38": "icons/eksiDost-38.png"
    },
    "default_popup": "popup/color-palette.html",
    "show_matches": ["*://eksisozluk.com/*"]
  }
}