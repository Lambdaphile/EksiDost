{
  "manifest_version": 2,
  "name": "eksiDost",
  "version": "2.5.1",

  "description": "Improves UX by coloring visited entries on eksisozluk.com",

  "icons": {
    "96": "icons/eksiDost-96.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "*://eksisozluk.com/*"
  ],

  "background": {
    "page": "./background_scripts/background.html"
  },
  
  "page_action": {
    "browser_style": true,
    "default_title": "eksiDost",
    "default_icon": {
      "96": "icons/eksiDost-96.png"
    },
    "default_popup": "popup/color-palette.html",
    "show_matches": ["*://eksisozluk.com/*"]
  }
}