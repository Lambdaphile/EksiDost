{
  "manifest_version": 2,
  "name": "eksiplus",
  "version": "2.0.0",

  "description": "Colors visited entry links on eksisozluk.com for better user experience while browsing topic lists",
  "icons": {
    "48": "icons/EksiPlus_48x48.png",
    "96": "icons/EksiPlus_96x96.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "https://eksisozluk.com/*"
  ],

  "page_action": {
    "browser_style": true,
    "default_title": "EksiPlus",
    "default_icon": "icons/EksiPlus_x32.png",
    "default_popup": "popup/color-picker.html",
    "show_matches": ["https://eksisozluk.com/*"]
  },

  "background": {
    "scripts": ["background_scripts/background.js"]
  }
}